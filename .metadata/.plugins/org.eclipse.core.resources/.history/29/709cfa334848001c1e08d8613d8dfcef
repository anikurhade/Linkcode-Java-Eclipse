import java.util.Scanner;

public class Student {
Scanner sc =new Scanner(System.in);

int studid;
String studname;
int s1,s2,s3,tot;

String grade;
void CreateStudent()
{
System.out.println("-: Enter Student Data :-");	
System.out.print("Student Id  :- ");
studid=sc.nextInt();
System.out.print("Student Name :- ");
studname=sc.next();
System.out.print("Maths Marks :- ");
s1=sc.nextInt();
System.out.print("English Marks :- ");
s2=sc.nextInt();
System.out.print("Scienece Marks :- ");
s3=sc.nextInt();
System.out.println("\t\t\t Thankyou Say 1 :-)");
int ch=sc.nextInt();
if(ch==1)
{
Calculateper(s1, s2, s3);

}
}
void displaystudentinfo()
{
	System.out.println("---------------------Student Id ------------------------");
	System.out.println("Id:- "+studid+"\tName :- "+studname);
	System.out.println("-------------------------------------------------------");
	System.out.println("\tMaths :-"+s1);
	System.out.println("\tScience :-"+s3);
	System.out.println("\tEnglish :-"+s2);
	System.out.println("-------------------------------------------------------");
	
}
void Calculateper(int s1,int s2 ,int s3)
{
	 int tot=s1+s2+s3;
	 float per=tot/3;
	 if (per<35) {
		displayper(tot, per);
		System.out.println("Sorry You Are Failed ! Better Luck Next Time");
		System.out.println("-------------------------------------------------------");
		
	} else {
		 displayper(tot, per);
		 Calcgrade(per);
	}
	
}
void displayper(int tot,float per)
{

	System.out.println("-------------------------------------------------------");
	System.out.println("Total Obtained :- "+tot+" /300 \t\t Percentage :-"+per);
	System.out.println("-------------------------------------------------------");
	
}
void Calcgrade(float per)
{
	if (per>35 && per<50) {
		System.out.println("-------------------------------------------------------");
		System.out.println("\t\t\tGrade :- D");
		System.out.println("-------------------------------------------------------");
		
	}
	else if(per>51 && per<70){
		System.out.println("-------------------------------------------------------");
		System.out.println("\t\t\tGrade :- C");
		System.out.println("-------------------------------------------------------");
	}
	else if(per>71 && per<80){
		System.out.println("-------------------------------------------------------");
		System.out.println("\t\t\tGrade :- B");
		System.out.println("-------------------------------------------------------");
	}
	else if(per>81 ){
		System.out.println("-------------------------------------------------------");
		System.out.println("\t\t\tGrade :- A");
		System.out.println("-------------------------------------------------------");
	}
	}
}


